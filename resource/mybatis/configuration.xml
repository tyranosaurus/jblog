<?xml version="1.0" encoding="UTF-8" ?> <!-- MyBatis 설정 파일 -->
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- ~~.xml 득 매핑파일들의 resultType 이름에 아리아스를 주어 간단히 만든다. -->
	<typeAliases>
		<typeAlias type="com.estsoft.jblog.vo.UserVo" alias="uservo"/> <!-- 아리아스는 모두 소문자로 쓰는게 관례. 대문자로 써도 상관은 없다. -->
		<typeAlias type="com.estsoft.jblog.vo.BlogVo" alias="blogvo"/> <!-- 아리아스는 모두 소문자로 쓰는게 관례. 대문자로 써도 상관은 없다. -->
		<typeAlias type="com.estsoft.jblog.vo.CategoryVo" alias="categoryvo"/> <!-- 아리아스는 모두 소문자로 쓰는게 관례. 대문자로 써도 상관은 없다. -->
	</typeAliases>
	
	<mappers>
		<mapper resource="mybatis/mappers/user.xml" />
		<mapper resource="mybatis/mappers/blog.xml" />
		<mapper resource="mybatis/mappers/category.xml" />
	</mappers>
</configuration>